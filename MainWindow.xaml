<Window x:Class="ExPractics01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExPractics01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="boto1" Content="Buenas" HorizontalAlignment="Left" Margin="34,143,0,0" VerticalAlignment="Top"
                Height="43" Width="153" Background="Orange"
                FontWeight="Bold"/>

        <Button Name="boto2" Content="Incrementar contador" HorizontalAlignment="Left" Margin="34,98,0,0" VerticalAlignment="Top"
                Height="40" Width="153" Click="botton2" Background="Orange"
                FontWeight="Bold"/>

        <CheckBox Name="check" Content="Check" HorizontalAlignment="Left" Margin="34,47,0,0" VerticalAlignment="Top"
                  Height="21" Width="91"
                  Checked="CheckClick"
                  Unchecked="CheckUnclick"
                  FontWeight="Bold"/>

        <Label Name="Contador" Content="1" HorizontalAlignment="Left" Margin="157,30,0,0" VerticalAlignment="Top" Height="63"
               Width="92" FontSize="30" FontWeight="Bold"/>




    </Grid>
</Window>
